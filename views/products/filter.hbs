<div class="row py-2 my-2">
    <div class="row mx-auto">
        {{#each products as |product|}}
       
        <a href="/products/detail/{{product.id}}" class="col-xs-12 col-md-4  text-decoration-none col-lg-3 p-1 justify-content-center px-3 my-2">
            <div class="d-flex flex-column align-items-center m1 bg-dark rounded-25 h-100" 
                        style="box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.75);
                        -webkit-box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.75);
                        -moz-box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.75);">
                <picture >
                    <img class="image-filter" src="{{product.avatarProd}}" alt="" style="height:200px;max-height: 200px; width:100%;">
                </picture>
                <div>
                    <h5 class="text-center text-decoration-none text-white pt-2 mt-2"><strong>{{product.name}}</strong></h5>
                    <p class="text-white-50 text-decoration-none text-center">{{product.createdBy}}</p>    
                    <div class="d-flex justify-content-around">
                        <p class="bg-warning rounded mx-1 p-1 px-2 text-decoration-none text-dark"><strong>{{product.price}}â‚¬</strong></p>
                        <p class="bg-light rounded mx-1 p-1 px-2 text-decoration-none text-dark"><i class="fa fa-star color-warning" aria-hidden="true"></i>{{product.rating}}</p>
                    </div>   
                </div>
            </div>
        </a>
        
        {{/each}}
       
    </div>
</div>