<div class="row bg-dark py-2 my-2">
    <div class="row  mx-auto">
        {{#each products as |product|}}
        <a href="/products/detail/{{product.id}}" class="col-xs-12 col-md-4  text-decoration-none col-lg-3 p-1  justify-content-center px-3">
            <div class="d-flex flex-column align-items-center m1 bg-secondary rounded h-100">
                <h6 class="text-center text-decoration-none text-dark pt-2">{{product.name}}</h6>
                <p class="text-white text-decoration-none">{{product.createdBy}}</p>    
                <div class="d-flex justify-content-around">
                    <p class="bg-warning rounded mx-1 p-1 px-2 text-decoration-none text-dark"><strong>{{product.price}}â‚¬</strong></p>
                    <p class="bg-light rounded mx-1 p-1 px-2 text-decoration-none text-dark"><i class="fa fa-star color-warning" aria-hidden="true"></i>{{product.rating}}</p>
                </div>   
            </div>
        </a>
        {{/each}}
    </div>
