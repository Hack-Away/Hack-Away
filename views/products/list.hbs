{{userRole currentUser.role}}


<div>
    <h1 class="my-4 text-center">Lista de Productos - {{user.name}}</h1>

    <div class="w-75 mx-auto mb-5">

        {{#each products as |product|}}

        <div class="text-decoration-none text-dark">

            <div class="card m-1 p-3 d-flex flex-row align-items-around">

                <div class="row">

                    <div class="d-flex col-xs-12 col-md-4 justify-content-center mb-4 py-2">

                        <img src="{{product.image}}" alt="" class="bg-secondary mx-auto w-100 h-100">

                    </div>

                    <div class="col-xs-12 col-md-8 float-left ">

                        <div class="d-flex flex-row justify-content-start align-items-center">
                            <h6><strong>{{product.name}}</strong></h6>
                            
                            <!--  aqui habrá que meter la distancia cuando hagamos el tema del maps -->
                        </div>

                        <div class="d-flex flex-row justify-content-between">
                            <p>Price: {{product.price}} €</p>
                            <p>Time: {{product.productTime}} min</p>
                        </div>

                        <div class="mt-3 float-left">
                            <h6>Product Description</h6>
                            <p>{{product.description}}</p>
                        </div>
                        <div class="mt-3 float-left">
                            <h6>Alérgenos</h6>
                            {{product.allergies}}
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-end p-1 mt-2">
                        <a href="/cart"><button class="btn btn-secondary mx-1">Add to Cart</button></a>
                        <a href="/products/detail/{{product._id}}"><button class="btn btn-primary mx-1">View More</button></a>
                       
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>