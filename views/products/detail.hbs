<div>
    <h1 class="mt-4 text-center">{{product.name}}</h1>
    
    <span class="text-center text-decoration-none text-dark"><p>{{product.createdBy}}</p></span>
    
    <div class="w-75 mx-auto mb-4">

        <div class="text-decoration-none text-dark">

            <div class="card m-1 p-3 d-flex flex-row align-items-around">

                <div class="row">

                    <div class="d-flex col-xs-12 col-md-4 justify-content-center mb-4 py-2">
                        <img src="{{product.image}}" alt="" class="bg-secondary mx-auto w-100 h-100">
                    </div>

                    <div class="col-xs-12 col-md-8 float-left ">
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <h4><strong>{{product.name}}</strong></h4>
                            <h4 class="bg-warning rounded-circle py-2 px-3"><strong>{{product.rating}}</strong></h4>
                        </div>
                        <div class="d-flex flex-row justify-content-between">
                            <p>Price: {{product.price}} €</p>
                            <p>Time: {{product.productTime}} min</p>
                        </div>
                        <div class="mt-3 float-left">
                            <h6>Product Description</h6>
                            <p>{{product.description}}</p>
                        </div>
                        <div class="mt-3 float-left">
                            <h6>Alérgenos</h6>
                            {{separateWords product.allergies}}
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-end p-1 mt-2">

                        <a href="/comments/new/{{product.id}}"><button class="btn btn-primary">Leave a Comment</button></a>
                        <a href="/cart/{{product.id}}"><button class="btn btn-secondary mx-1">Add to Cart</button></a>

                       
                             <a href="/products/edit/{{product.id}}" class="{{userAdmin product.createdBy sessionUser}}"><button class="btn btn-primary mx-1">Edit</button></a>
                             <a href="/products/delete/{{product.id}}" class="{{userAdmin product.createdBy sessionUser}}"><button class="btn btn-danger mx-1">Delete</button></a>
                            
                    </div>
                </div>
            </div>
            <div class="px-2">
                <h3 class="text-center my-3">Comentarios de {{product.name}}</h3>
               
                {{#each comments as |comment|}}
                <div class="card my-2 p-3">
                    <div class="row">
                        <div class="col-sx-12 col-sm-10 d-flex flex-column ml-1">
                            <h6 class="bg-secondary text-white p-1 rounded">{{comment.title}} - <strong class="text-dark">{{comment.createdBy}}</strong></h6> 
                            <p class="text-muted mx-1">{{comment.message}}</p>
                        </div>
                        <div class="col-sx-12 col-sm-2 d-flex ">
                            <div class="d-flex justify-content-center align-items-center card w-100">
                                <h1 class="mx-3 text-warning"> {{comment.rating}} </h1>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>