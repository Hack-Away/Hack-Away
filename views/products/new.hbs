
<div class="m-2 mt-3">
  <h1 class="text-center">Product creation Form</h1>
  <p class="text-center">created by:{{currentUser.id}}</p>
</div>

<div class="container card bg-light mx-auto mb-5" style="max-width: 800px;">
  <form method="post" action="/products/register" class="card-body" enctype="multipart/form-data">

    <div class="row">
        <div class="form-group my-2 col-6">
          <label >Product Name</label>   
          <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}} {{#if product.name}}is-valid{{/if}}" name="name" placeholder="Product Name" value="{{product.name}}">
          {{#unless errors}}<small class="form-text text-muted">Enter the name of your plate</small>{{/unless}}
          {{#if errors.name}}<small class="form-text text-danger">{{errors.name}}</small>{{/if}}
          {{#if product.name}}<small class="form-text text-success">Product name is valid</small>{{/if}}
         
        </div>
        <div class="form-group my-2 col-6">
          <label >Price</label>
          <input type="text" name="price" class="form-control {{#if errors.price}}is-invalid{{/if}} {{#if product.price}}is-valid{{/if}}" id="exampleInputPassword1" placeholder="€" value="{{product.price}}">
          {{#unless errors}}<small class="form-text text-muted">How much it's cost </small>{{/unless}}
          {{#if errors.price}}<small class="form-text text-danger">{{errors.price}}</small>{{/if}}
          {{#if product.price}}<small class="form-text text-success">Product price is valid</small>{{/if}}
        </div>
    </div>

    <!-- Habrá que dejar al usuario subir las fotos de la comida con esto, de momento dejo una por defecto
    <div class="form-group my-2 col-12">
      <label for="exampleInputPassword1">Image</label>
      <a type="text" class="form-control" name="image" placeholder="Plate description"></a>
      <small class="form-text text-muted">A picture of your plate</small>
    </div>
    -->

    <!-- IMAGEN DE MOMENTO-->
    <div class="row w-75 justify-content-center mx-auto">
      <img src="data:image/jpeg;base64,">
    </div>
    <!-- IMAGEN DE MOMENTO-->

    <div class="container">
        <input type="file" name="image">     
    </div>

    <div class="form-group my-2 col-12 mt-3">
      <label for="exampleInputPassword1">Description</label>
      <textarea type="text" class="form-control {{#if errors.description}}is-invalid{{/if}} {{#if product.description}}is-valid{{/if}}" name="description" placeholder="Plate description">{{product.description}}</textarea>
        {{#unless errors}}<small class="form-text text-muted">A few words to that describes your plate</small>{{/unless}}
        {{#if errors.description}}<small class="form-text text-danger">{{errors.description}}</small>{{/if}}
        {{#if product.description}}<small class="form-text text-success">Product description is valid</small>{{/if}}
    </div>
    
    <div class="form-group">
      <div class="row justify-content-between">
        <label class="mb-2">Allergies</label>
        <div>
          <input type="checkbox" class="form-check-input" name="allergies" value="none" checked>
          <label class="form-check-label">No Allergies</label>
        </div>
      </div>
      <div class="row mx-auto col-12">
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="eggs">
          <label class="form-check-label">Eggs</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="fish">
          <label class="form-check-label">Fish</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="milk">
          <label class="form-check-label">Milk</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="peanuts">
          <label class="form-check-label">Peanuts</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="soy">
          <label class="form-check-label">Soy</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="wheat">
          <label class="form-check-label">Wheat</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="vegetables">
          <label class="form-check-label">Vegetables</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="fruit">
          <label class="form-check-label">Fruit</label>
        </div>
        <div class="form-check col-4">
          <input type="checkbox" class="form-check-input" name="allergies" value="seafood">
          <label class="form-check-label">Seafood</label>
        </div>
      </div>
    </div>

    <hr>

    <div class="form-group">
      <label for="name">Cooking Time</label>
      <input type="text" name="productTime" class="form-control mt-3 {{#if errors.productTime}}is-invalid{{/if}} {{#if product.productTime}}is-valid{{/if}}" placeholder="Insert time, in minutes" value="{{product.productTime}}">
        {{#unless errors}}<small class="form-text text-muted">How much time needs to make the food</small>{{/unless}}
        {{#if errors.productTime}}<small class="form-text text-danger">{{errors.productTime}}</small>{{/if}}
        {{#if product.productTime}}<small class="form-text text-success">Production time is valid</small>{{/if}}
    </div>

        

    <div class="row align-items-center mt-4 mb-3">
      <button type="submit" class="btn btn-secondary">Create Product</button>
    </div>

  </form>
        
        

</div>