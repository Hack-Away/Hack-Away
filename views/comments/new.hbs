<div>
    <h1 class="mt-4 text-center">{{product.name}}</h1>

    <span class="text-center text-decoration-none text-dark">
        <p>{{product.createdBy}}</p>
    </span>

    <div class="w-75 mx-auto mb-4">

        <div class="text-decoration-none text-dark">

            <div class="card m-1 p-3 d-flex flex-row align-items-around">

                <div class="row">

                    <div class="d-flex col-xs-12 col-md-4 justify-content-center mb-4 py-2">
                        <img src="{{product.image}}" alt="" class="bg-secondary mx-auto w-100 h-100">
                    </div>

                    <div class="col-xs-12 col-md-8 float-left ">
                        <div class="d-flex flex-row justify-content-start align-items-center">
                            <h6><strong>{{product.name}}</strong></h6>
                        </div>
                        <div class="d-flex flex-row justify-content-between">
                            <p>Price: {{product.price}} €</p>
                            <p>Time: {{product.productTime}} min</p>
                        </div>
                        <div class="mt-3 float-left">
                            <h6>Product Description</h6>
                            <p>{{product.description}}</p>
                        </div>
                        <div class="mt-3 float-left">
                            <h6>Alérgenos</h6>
                            {{product.allergies}}
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="text-center mt-3">Nuevo Comentario</h3>
            <div class="card">
                <form action="/comments/new/{{product.id}}" method="POST" class="d-flex flex-column form-group p-3">
               
                    <div class="row mb-3 ">

                        <div class="col-8">
                            <input type="text" name="title" placeholder="Put a title to your comment" value="{{comment.title}}" class="form-control p-1 rounded {{#if errors.title}}is-invalid{{/if}}">
                            {{#if errors.title}}<small class="form-text text-danger">{{errors.title}}</small>{{/if}}
                        </div>

                        <div class="col-4 ">
                            <select name="rating" class="p-1 rounded {{#if errors.rating}}is-invalid{{/if}} w-100">
                                <option value="" selected>> -</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            {{#if errors.rating}}<small class="form-text text-danger">{{errors.rating}}</small>{{/if}}
                        </div>

                    </div>

                    
                        <textarea name="message" cols="20" rows="5" class="{{#if errors.message}}is-invalid{{/if}}">{{comment.message}}</textarea>
                        {{#if errors.message}}<small class="form-text text-danger">{{errors.message}}</small>{{/if}}
                   
                  
                    <div class="d-flex justify-content-end mt-1">
                        {{#if errors.idProduct}}<small class="form-text text-danger">{{errors.idProduct}}</small>{{/if}}
                        <button type="submit" class="btn btn-success">Crear Comentario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>