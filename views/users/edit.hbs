
<div class="w-75 mx-auto mb-4">
    <div class="row mx-auto mt-4">
        <h1 class="text-center">{{user.name}}'s Profile Edit</h1>
        <p class="text-center">{{user.id}} - {{user.role}}</p>
    </div>
    <div>
        <form action="/users/edit/{{user.id}}" method="post" class="card"  enctype="multipart/form-data">

            <div class="form-group m-2 {{userRole user.role}}">
                <label for="exampleFormControlSelect1">User's Role</label>
                <select name="role" class="form-control" id="exampleFormControlSelect1">
                    <option value="admin">Admin</option>
                    <option value="user">Restaurant</option>
                    <option value="costumer">Costumer</option>
                </select>
            </div>

            <div class="form-group m-2">
                <label for="name">User's name</label>
                <input type="text" name="name" class="form-control {{isInvalid errors.name}}" placeholder="Enter name"
                    value="{{user.name}}">
                {{formError errors.name }}
            </div>

            <div class="form-group m-2">
                <label for="name">User's phone</label>
                <input type="phone" name="phone" class="form-control {{isInvalid errors.phone}}" placeholder="Enter phone"
                    value="{{user.phone}}">
                {{formError errors.phone }}
            </div>

            <div class="form-group m-2 d-flex flex-column mx-auto">
                <label for="name">User's image</label>
                <img src="{{user.avatar}}" alt="" style="width: 300px; height:300px">
            </div>

    <div class="container">
        <input type="file" name="image">     
    </div>

            <div class="form-grupo m-2 d-flex flex-column">
                <label for="description"> Description</label>
                <textarea name="description" cols="30" rows="10">{{user.description}}</textarea>
            </div>
            
            <div class="form-group m-2">
                <label for="exampleFormControlSelect1">Kitchen</label>
                <select name="kitchen" class="form-control" id="exampleFormControlSelect1">
                    <option value="Mediterranean">Mediterranean</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Mexican">Mexican</option>
                    <option value="Arabic">Arabic</option>
                    <option value="Indian">Indian</option>
                    <option value="Italian">Italian</option>
                </select>
            </div>
            <div class="d-flex justify-content-center my-2">
                <button type="submit" class="btn btn-success mx-auto">Confirm Changes</button>
            </div>
        </form>
        
    </div>
</div>