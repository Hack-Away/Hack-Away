<div class="d-flex flex-column align-items-center my-3">
    <h1><u>{{user.name}}'s Profile</u></h1>
    <p class="fs-6 text-secondary">{{user.id}} - <strong class="text-dark">{{user.role}}</strong></p>
    <div class="row ">
        <div class="d-flex flex-row justify-content-around {{{userAdmin user.id sessionUser}}}">
            <a href="/products/register" class="{{{userRole user.role}}}"><button class="btn btn-success p-2 m-2">Add Product</button></a>
            <a href="/users/edit/{{user.id}}"><button class="btn btn-primary p-2 m-2">Edit Profile</button></a>
            <a href="/users/oldOrders/{{user.id}}"><button class="btn btn-secondary p-2 m-2">View Old Orders</button></a>
            <a href="/users/delete/{{user.id}}" class="{{userRole user.role}}"><button class="btn btn-danger p-2 m-2">Delete Profile</button></a>
        </div>
    </div>
    <div class="card container-fluid bg-secondary p-3" style="max-width: 700px;">
        <div class="row m-1 mx-auto">
            <div class="col-xs-12 col-sm-5" >
                <img src="{{user.avatar}}" alt="" style="width: 250px; height:250px">
            </div>
            <div class="col-xs-12 col-sm-7 p-3">
                <p class="text-white fs-6 m-0">@: {{user.email}}</p>
                <p class="text-white fs-6 m-0">Phone: {{user.phone}}</p>
                <p class="text-white fs-6 m-0">Adress: {{user.adress}}</p>
                <p class="text-white fs-6 m-0">Kitchen: {{user.kitchen}}</p>
                <p class="text-white fs-6 m-0">Favorites: {{user.favorites}}</p>
            </div>
            <div class="col-xs-12 p-3 justify-content-center mt-2">
                <h4 class="text-center">{{user.name}}'s Description</h4>
                <p>{{user.description}}</p>
            </div>
        </div>
    </div>
    <div>
        <a href="/products/list/{{user.id}}" class="mt-4 text-white text-decoration-none btn btn-success">Ver todos los productos de {{user.name}}</a>
    </div>
    <hr>
    <div>
        <h1 class="mb-4 text-center">Top Productos - {{user.name}}</h1>

        <div class="w-75 mx-auto">

            {{#each products as |product|}}

            <div  class="text-decoration-none text-dark">

                <div class="card m-1 p-3 d-flex flex-row align-items-around">

                    <div class="row">

                       <div class="d-flex col-xs-12 col-md-4 justify-content-center mb-4 py-2">
                            
                            <img src="{{product.avatarProd}}" alt="" class="bg-secondary mx-auto w-100 h-100">

                       </div>

                       <div class="col-xs-12 col-md-8 float-left ">
                           
                            <div class="d-flex flex-row justify-content-between align-items-center">
                                <h6><strong>{{product.name}}</strong></h6>
                            </div>

                            <div class="d-flex flex-row justify-content-between">
                                <p>Price: {{product.price}} €</p>
                                <p>Time: {{product.productTime}} min</p>
                            </div>

                            <div class="mt-3 float-left">
                                <h6>Product Description</h6>
                                <p>{{product.description}}</p>
                            </div>
                            <div class="mt-3 float-left">
                                <h6>Alérgenos</h6>
                                {{product.allergies}}
                            </div>

                         </div>
                        
                         <div class="d-flex flex-row justify-content-end p-1 mt-2">
                            <a href="/order/add/{{product.id}}"><button class="btn btn-secondary mx-1 ">Add to Cart</button></a>
                         </div>
                        

                    </div>
                </div>
            </div>
           
            {{/each}}


        </div>
    </div>
</div>
