
<div class="d-flex flex-column align-items-center my-3">
    <h1><u>{{user.name}}'s Profile</u></h1>
    <p class="fs-6 text-secondary">{{user.id}} - <strong class="text-dark">{{user.role}}</strong></p>
    <div class="row">
        <div class="d-flex flex-row justify-content-around">
            <a href="/products/new"><button class="btn btn-danger p-2 m-2">Add Product</button></a>
        </div>
    </div>
    <div class="card container-fluid bg-secondary p-3" style="max-width: 700px;">
        <div class="row m-1">
            <div class="col-xs-12 col-sm-5" >
                <img src="data:image/jpeg;base64," alt="">
            </div>
            <div class="col-xs-12 col-sm-7 p-3">
                <p class="text-white fs-6 m-0">@: {{user.email}}</p>
                <p class="text-white fs-6 m-0">Phone: {{user.phone}}</p>
                <p class="text-white fs-6 m-0">Kitchen: {{user.kitchen}}</p>
                <p class="text-white fs-6 m-0">Favorites: {{user.favorites}}</p>
            </div>
        </div>
    </div>
</div>
