<div class="d-flex flex-column align-items-center my-2">
    <h1><u>{{user.name}}'s Profile</u></h1>
    <p class="fs-6 text-secondary">{{user.id}} - <strong class="text-dark">{{user.role}}</strong></p>
    <div>
        <a href="/products/list/{{user.id}}"
            class="mb-3 text-white text-decoration-none btn btn-dark {{userRole user.role}}">Ver todos los productos de
            {{user.name}}</a>
    </div>
    <div class="row ">
        <div class="d-flex flex-row justify-content-around {{{userAdmin user.id sessionUser}}}">
            <a href="/products/register" class="{{{userRole user.role}}}"><button class="btn btn-success p-2 m-2">Add Product</button></a>
            <a href="/users/edit/{{user.id}}"><button class="btn btn-primary p-2 m-2">Edit Profile</button></a>
            <a href="/users/oldOrders/{{user.id}}"><button class="btn btn-secondary p-2 m-2">View Old Orders</button></a>
            <a href="/users/delete/{{user.id}}" class="{{userRole user.role}}"><button class="btn btn-danger p-2 m-2">Delete Profile</button></a>
        </div>
    </div>
    <div class="container-fluid bg-dark p-3 w-100">
        <div class="row">
            <div class="col-xs-12 d-flex justify-content-around">
                <img src="{{user.avatar}}" alt="" style="width: 100%; max-height:600px">
            </div>
            <div class="col-xs-12 d-flex justify-content-around mt-3 w-75 mx-auto">
                <p class="text-secondary fs-6">@: {{user.email}}</p>
                <p class="text-secondary fs-6">Phone: {{user.phone}}</p>               
                <p class="text-secondary fs-6">Kitchen: {{user.kitchen}}</p>
            </div>           
        </div>
        <div class="col-xs-12 p-3 ">
            <h4 class="text-center text-white mb-3"> - {{user.name}} - </h4>
            <p class="text-white-50 text-center w-75 mx-auto">{{user.description}}</p>
        </div>
    </div>
    
    <hr>
    <div class="{{userRole user.role}}">
        <h1 class="mb-4 text-center">Top Productos - {{user.name}}</h1>

        <div class="w-75 mx-auto">

            {{#each products as |product|}}
            <a href="/products/detail/{{product.id}}" class="text-decoration-none ">
                <div  class="text-decoration-none text-white mb-3">

                    <div class="bg-dark m-1 p-3 d-flex flex-row align-items-around" style="box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.76);
                                                                                           -webkit-box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.76);
                                                                                           -moz-box-shadow: 9px 10px 6px -5px rgba(77,77,77,0.76);">

                        <div class="row">

                        <div class="d-flex col-xs-12 col-md-4 justify-content-center mb-4 py-2">
                                
                                <img src="{{product.avatarProd}}" alt="" class="bg-secondary mx-auto w-100 h-100">

                        </div>

                        <div class="col-xs-12 col-md-8 float-left ">
                            
                                <div class="d-flex flex-row justify-content-between align-items-center">
                                    <h6><strong>{{product.name}}</strong></h6>
                                </div>

                                <div class="d-flex flex-row justify-content-between">
                                    <p>Price: {{product.price}} €</p>
                                    <p>Time: {{product.productTime}} min</p>
                                </div>

                                <div class="mt-3 float-left">
                                    <h6>Product Description</h6>
                                    <p>{{product.description}}</p>
                                </div>
                                <div class="mt-3 float-left">
                                    <h6>Alérgenos</h6>
                                    {{product.allergies}}
                                </div>

                            </div>                     
                        </div>
                    </div>
                </div>
            </a>
           
            {{/each}}


        </div>
    </div>
</div>
